<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- App Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GameEase"
            android:textSize="@dimen/_50sdp"
            android:textStyle="bold"
            android:textColor="@color/accent_green"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a 2-player game to play below!"
            android:textSize="@dimen/_20sdp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="30dp" />

        <!-- Game Buttons -->
        <Button
            android:id="@+id/btnTicTacToe"
            android:text="Tic Tac Toe"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/rounded_orange_button"
            android:layout_marginVertical="10dp" />

        <Button
            android:id="@+id/btnRPS"
            android:text="Rock Paper Scissors"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/rounded_orange_button"
            android:layout_marginVertical="10dp" />

        <Button
            android:id="@+id/btnMemoryMatch"
            android:text="Memory Match"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/rounded_orange_button"
            android:layout_marginVertical="10dp" />

        <Button
            android:id="@+id/btnDotsBoxes"
            android:text="Dots and Boxes"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/rounded_orange_button"
            android:layout_marginVertical="10dp" />

        <Button
            android:id="@+id/btnNumberNim"
            android:text="Number Nim"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/rounded_orange_button"
            android:layout_marginVertical="10dp" />

    </LinearLayout>
</ScrollView>



