<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:text="Memory Match"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold"
            android:textColor="@color/accent_green"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="➤ Players take turns flipping 2 cards.\n
➤ If cards match, they stay face up and the player scores.\n
➤ If not, the cards are flipped back and turn passes.\n
➤ The player with more matched pairs wins the game.
"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:lineSpacingExtra="8dp"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Start Game"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/rounded_orange_button"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
