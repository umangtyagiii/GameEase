<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Game Title -->
        <TextView
            android:id="@+id/ruleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tic Tac Toe"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold"
            android:textColor="@color/accent_green"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <!-- Rules Text -->
        <TextView
            android:id="@+id/ruleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="➤ Two players take turns to mark X or O.\n
➤ Tap any empty cell to place your mark.\n
➤ Align 3 marks in a row (vertically, horizontally, or diagonally) to win.\n
➤ If all cells are filled and no one wins, the game ends in a draw.
"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:lineSpacingExtra="8dp"
            android:layout_marginBottom="40dp" />

        <!-- Start Button -->
        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Start Game"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/rounded_orange_button"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
